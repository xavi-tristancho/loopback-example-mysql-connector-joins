  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run mocha",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "console": "integratedTerminal",
      "stopOnEntry": false,
      "args": ["server/**/*.spec.js", "--no-timeouts", "--exit"],
